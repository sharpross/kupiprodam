@model KupiProdam.Entities.Entites.User

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm("Ajax", "SellerRegistartion", FormMethod.Post, new { @role = "form"}))
        {
            
        }
        <form role="form" action="SellerRegistartion" method="post">

            <div class="form-group">
                <label for="Name">Название организации (или ваше ФИО)*</label>
                <input type="text" class="form-control" id="Name" name="Name" placeholder="Название организации" value="@Model.Name">
            </div>
            <div class="vert_20"></div>
            <div class="form-group">
                <label for="Email">Email*</label>
                <input type="email" class="form-control" id="Email" name="Email" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="Phone">Телефон*</label>
                <input type="tel" class="form-control" id="Phone" name="MainPhone" placeholder="+71234567890">
            </div>
            <div class="form-group">
                <label for="Password">Пароль*</label>
                <input type="password" class="form-control" id="Password" name="Password" placeholder="Пароль">
            </div>
            <p style="color:red">* - объязательные поля</p>
            <div class="vert_20"></div>
            <p><input type="checkbox" placeholder="wd" /> Согласен с <a href="#">условиями договора</a></p>

            <div style="width: 100%; text-align: center;">
                <button type="submit" class="btn btn-four">Зарегистрироваться</button>
            </div>
        </form>
    </div>
</div>