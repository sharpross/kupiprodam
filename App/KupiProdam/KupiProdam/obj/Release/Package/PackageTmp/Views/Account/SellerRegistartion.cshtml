<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form role="form">
            <div class="form-group">
                <label for="UrType">Зарегистрироваться как*</label>
                <select class="form-control" id="UrType">
                    <option>Юридическое лицо</option>
                    <option>Физическое лицо</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Name">Название организации*</label>
                <input type="text" class="form-control" id="Name" placeholder="Название организации">
            </div>
            <div class="vert_20"></div>
            <div class="form-group">
                <label for="Email">Email*</label>
                <input type="email" class="form-control" id="Email" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="Phone">Телефон*</label>
                <input type="tel" class="form-control" id="Phone" placeholder="+7 123 456 78 90">
            </div>
            <div class="form-group">
                <label for="Password">Пароль*</label>
                <input type="password" class="form-control" id="Password" placeholder="Пароль">
            </div>
            <div class="vert_20"></div>
            <div class="form-group">
                <label for="WebSite">Web-сайт</label>
                <input type="url" class="form-control" id="WebSite" placeholder="Адрес на ваш web-сайт">
            </div>
            <div class="form-group">
                <label for="Skype">Skype</label>
                <input type="text" class="form-control" id="Skype" placeholder="Логин в Skype">
            </div>
            <div class="vert_20"></div>
            <div class="form-group">
                <label for="VK">ВКонтакте</label>
                <input type="url" class="form-control" id="VK" placeholder="Адрес cтраницы">
            </div>
            <div class="form-group">
                <label for="Facebook">Facebook</label>
                <input type="url" class="form-control" id="Facebook" placeholder="Адрес cтраницы">
            </div>
            <p><input type="checkbox" placeholder="wd" /> Согласен с <a href="#">условиями договора</a></p>
            <p>* - объязательные поля</p>
            <div style="width: 100%; text-align: center;">
                <button type="submit" class="btn btn-four">Зарегистрироваться</button>
            </div>
        </form>
    </div>
</div>