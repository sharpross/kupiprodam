@model YaProdayu2.Models.Support.SupportModel

@{
    ViewBag.Title = "Поддержка";
}

<h2>Поддержка</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Обратная связь</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label class="control-label col-md-2">Тема</label>
            <div class="col-md-10">
                <select class="form-control" name="Title" required>
                    <option disabled selected>Выберите тему</option>
                    <option>Предлжение/замечания</option>
                    <option>Консультация</option>
                    <option>Жалоба</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Сообщение</label>
            <div class="col-md-10">
                <textarea rows="10" cols="100"></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Отправить" class="btn btn-two" />
            </div>
        </div>
    </div>
}