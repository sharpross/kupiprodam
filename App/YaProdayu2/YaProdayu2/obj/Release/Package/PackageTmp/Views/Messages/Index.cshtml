@model YaProdayu2.Models.UserMessages.UserListMessagesView

@{
    ViewBag.Title = "Сообщения";
}

<h2>Сообщения</h2>

<table class="table">

@foreach (var item in Model.Messages)
{
    <tr>
        <td style="text-align: center; font-weight: bold;" width="200">
            <a href="/Messages/Write?toUserId=@item.User.Id">
                <img src="/Image/Get?id=@item.User.ImageId" width="100" />
                <p>
                    @Html.ActionLink(item.User.Name, "Write", new { @toUserId = item.User.Id }, null)
                </p>
            </a>
        </td>
        <td style="text-align: left; vertical-align: top;">
            @Html.ActionLink(item.LastMessage, "Write", new { @toUserId = item.User.Id }, null)
        </td>
    </tr>
}

</table>
