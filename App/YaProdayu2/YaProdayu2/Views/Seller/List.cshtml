@model IEnumerable<YaProdayu2.Models.Entities.Tender>

@{
    ViewBag.Title = "List";
}

<h2>Список торгов</h2>

<table class="table table-striped">
    <tr>
        <th>
            Название торгов
        </th>

        <th style="text-align: center">
            Тема/категория
        </th>

        <th style="text-align: center">
            Регион/Город
        </th>

        <th style="text-align: center">
            Бюджет
            (&#8381;)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td width="100">
                @Html.ActionLink(item.Title, "Details", new { id = item.Id })
            </td>
            <td width="100" style="text-align: center">
                @Html.ActionLink(item.Theme, "Details", new { id = item.Id })
                <br />
                @Html.ActionLink(item.SubTheme, "Details", new { id = item.Id })
            </td>
            <td width="100" style="text-align: center">
                @Html.ActionLink(item.City, "Details", new { id = item.Id })
            </td>
            <td width="70" style="text-align: center">
                @Html.ActionLink(item.Cost + " руб.", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
