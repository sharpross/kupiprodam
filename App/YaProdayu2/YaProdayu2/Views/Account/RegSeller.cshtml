@model YaProdayu2.Models.Views.Seller.SellerRegistrationView

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form role="form" action="RegSeller" method="post">
            <div class="form-group">
                <label for="Name">Название организации (или ваше ФИО)*</label>
                <input type="text" class="form-control" id="Name" name="Name" placeholder="Название организации" value="@Model.Name">
            </div>
            <div class="vert_20"></div>
            <div class="form-group">
                <label for="Email">Email*</label>
                <input type="email" class="form-control" id="Email" name="Email" placeholder="Email" value="@Model.Email">
            </div>
            <div class="form-group">
                <label for="Phone">Телефон*</label>
                <input type="tel" class="form-control" id="Phone" name="Phone" placeholder="+71234567890" value="@Model.Phone">
            </div>
            <div class="form-group">
                <label for="Password">Пароль*</label>
                <input type="password" class="form-control" id="Password" name="Password" placeholder="Пароль" value="@Model.Password">
            </div>
            <p style="color:red">* - объязательные поля</p>
            <div class="vert_20"></div>
            <p><input type="checkbox" id="IsAcceptRules" name="IsAcceptRules" value="@Model.IsAcceptRules" /> Согласен с <a href="#">условиями договора</a></p>
            <div style="width: 100%; text-align: center;">
                <button type="submit" class="btn btn-four">Зарегистрироваться</button>
            </div>
        </form>
    </div>
</div>