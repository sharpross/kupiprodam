@if (ViewBag.IsAuth == false)
{
    <div style="text-align: center;">
        <p><a href="#" id="login" class="btn" style="text-decoration: underline;">Войти</a></p>
        <p><a href="~/Account/Registration" id="login" class="btn" style="text-decoration: underline;">Зарегистрироваться</a></p>
    </div>
    
    <div id="loginForm" class="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Закрыть</span></button>
                    <h4 class="modal-title">Войти</h4>
                </div>
                <div class="modal-body">
                    <form name="LoginForm">
                        <div class="form-group">
                            <input type="email" class="form-control" name="Login" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="Password" placeholder="Пароль">
                        </div>
                        <div class="checkbox">
                            <input type="checkbox" name="RemembeMe"> Запомнить
                        </div>
                        <div class="LoginError" style="padding-bottom: 10px; color: red;"></div>
                        <button type="button" class="btn btn-primary" name="LoginButton">Войти</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
}
@if (ViewBag.IsAuth == true)
{ 
    <div style="text-align: center;">
        <p><strong>@ViewBag.UserName</strong></p>
        <p><a name="LogoutButton">Выход</a></p>
    </div>
}
